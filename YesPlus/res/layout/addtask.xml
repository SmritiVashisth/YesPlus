<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Add task"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etTask"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10" >
        </EditText>

        <Button
            android:id="@+id/bAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

        <ImageButton
            android:id="@+id/ibSpeak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sound" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select the priorities of your task"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/checkUrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent" />

    <CheckBox
        android:id="@+id/checkImp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="By when should this task be completed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Due Date" />

    <Button
        android:id="@+id/bTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Required Time" />

</LinearLayout>